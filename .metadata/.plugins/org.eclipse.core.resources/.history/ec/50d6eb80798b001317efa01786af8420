 * HW1-3 subclass
 * 
 * Multi-Menu Application
 */

public class hw1_4 extends hw1 {
	
	static int choice;

	public static void main(String[] args) {
		
		displayMainMenu();

	}
	
	public static void displayMainMenu() {

		System.out.println();
		System.out.println("Main Menu:");
		System.out.println("1. Calculate Area");
		System.out.println("2. Calculate Perimeter");
		System.out.println("3. Calculate Area and Perimeter");
		System.out.println("4. Back to main menu");
		System.out.println("Choice(1-3):");
		choice = scanner.nextInt();
		
		//error checking for invalid number
		while ((choice > 3) || (choice < 1)) {
			System.out.println("Invalid entry.");
			System.out.println();
			System.out.println("Choice(1-3):");
			choice = scanner.nextInt();
		}
		
		switch (choice) {
			case 1: 
				getRectDimensions();
				displayArea();
				displayRectSubMenu();
			case 2: 
				getRectDimensions();
				displayPerimeter();
				displayRectSubMenu();
			case 3: 
				getRectDimensions();
				displayArea();
				displayPerimeter();
				displayRectSubMenu();
			case 4: 
				displayMainMenu();
		}
	}
	
	public static void displayRectSubMenu() {

		System.out.println();
		System.out.println("Rectangle Problem:");
		System.out.println("1. Calculate Area");
		System.out.println("2. Calculate Perimeter");
		System.out.println("3. Calculate Area and Perimeter");
		System.out.println("4. Back to main menu");
		System.out.println("Choice(1-4):");
		choice = scanner.nextInt();
		
		//error checking for invalid number
		while ((choice > 4) || (choice < 1)) {
			System.out.println("Invalid entry.");
			System.out.println();
			System.out.println("Choice(1-4):");
			choice = scanner.nextInt();
		}
		
		switch (choice) {
			case 1: 
				getRectDimensions();
				displayArea();
				displayRectSubMenu();
			case 2: 
				getRectDimensions();
				displayPerimeter();
				displayRectSubMenu();
			case 3: 
				getRectDimensions();
				displayArea();
				displayPerimeter();
				displayRectSubMenu();
			case 4: 
				displayMainMenu();
		}
	}

}
